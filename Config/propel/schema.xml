<?xml version="1.0" encoding="UTF-8"?>
<database name="everon_book_catalog_example" defaultIdMethod="native" namespace="Everon\Model">
  <table name="book" phpName="Book">
    <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true"/>
    <column name="title" type="varchar" size="255" required="true" />
    <column name="catalog_id" type="integer" required="true"/>
    <foreign-key foreignTable="catalog" phpName="Catalog" refPhpName="Book">
      <reference local="catalog_id" foreign="id"/>
    </foreign-key>
    <validator column="title">
      <rule name="maxLength" value="255" message="Title is too long. Maximum length is ${value} characters !" />
    </validator>
  </table>
  <table name="catalog" phpName="Catalog">
    <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true"/>
    <column name="name" type="varchar" size="255" required="true" />
    <validator column="name">
      <rule name="maxLength" value="255" message="Catalog name is too long. Maximum length is ${value} characters !" />
      <rule name="unique" message="Catalog name must be unique" />
    </validator>
    <unique>
      <unique-column name="name" size="255" />
    </unique>
  </table>
</database>